<%- include('../includes/header') %>

<div class="box">
    <h1 class="title has-text-centered"><%= lang.exercise.start.startPractice.letsPractice %></h1>

    <div class="columns is-align-items-center is-justify-content-center">

        <div class="column is-offset-1 is-5 is-vcentered">
            <form method="POST" id="formStart">
                <input type="hidden" name="_csrf" value="<%= csrf() %>">

                <div class="dropdown is-hoverable is-block">
                    <label class="label mt-3 dropdown-trigger">
                        <%= lang.exercise.start.startPractice.numberOfExercises %>
                        <input class="input mt-1" type="number" min="0" max="1000" name="exerciseCount" value="0" />
                    </label>
                    <div class="dropdown-menu" role="menu">
                        <div class="dropdown-content has-text-weight-normal pl-2 pr-2">
                            <%- lang.exercise.start.startPractice.numberOfExercisesHint %>
                        </div>
                    </div>
                </div>

                <label class="label mt-3"><%= lang.exercise.start.startPractice.tags %></label>
                <div class="columns">
                    <div class="column">
                        <%
                        tags = tags.sort();
                        for (let i = 0 ; i < tags.length ; i++) {
                            if (i % 3 === 0) { %>
                            <div>
                                <label class="checkbox">
                                    <input type="checkbox" name="tags" value="<%= tags[i] %>" />
                                    <%= tags[i].toUpperCase() %>
                                </label>
                            </div>
                        <% }} %>
                    </div>
                    <div class="column">
                        <% for (let i = 0 ; i < tags.length ; i++) {
                        if (i % 3 === 1) { %>
                            <div>
                                <label class="checkbox">
                                    <input type="checkbox" name="tags" value="<%= tags[i] %>" />
                                    <%= tags[i].toUpperCase() %>
                                </label>
                            </div>
                        <% }} %>
                    </div>
                    <div class="column">
                        <% for (let i = 0 ; i < tags.length ; i++) {
                        if (i % 3 === 2) { %>
                        <div>
                            <label class="checkbox">
                                <input type="checkbox" name="tags" value="<%= tags[i] %>" />
                                <%= tags[i].toUpperCase() %>
                            </label>
                        </div>
                        <% }} %>
                    </div>
                </div>

                <label class="label mt-3"><%= lang.exercise.start.startPractice.exerciseTagMode.label %></label>
                <div class="control">
                    <label class="radio">
                        <input type="radio" name="tagOperation" value="INTERSECTION" checked />
                        <%= lang.exercise.start.startPractice.exerciseTagMode.intersection %>
                    </label>
                    <br />
                    <label class="radio">
                        <input type="radio" name="tagOperation" value="UNION" />
                        <%= lang.exercise.start.startPractice.exerciseTagMode.union %>
                    </label>
                </div>

            </form>
        </div>


        <div class="column is-5">
            <img src="/assets/img/start.png" alt="" />
        </div>

    </div>


    <div class="mt-3 has-text-centered">
        <button type="submit" form="formStart" class="button is-primary is-small mt-3"><%= lang.exercise.start.startPractice.begin %></button>
    </div>

</div>

