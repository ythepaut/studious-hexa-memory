<%- include('../includes/header') %>

<h1 class="title">
    Modification d'exercice
</h1>
<h3 class="subtitle">
    <%= exercise.id %>
</h3>

<form method="POST" action="/manage/edit" id="edit">

    <!-- Title -->
    <div class="field">
        <div class="is-normal">
            <label class="label">Titre</label>
        </div>
        <div class="field-body mt-1">
            <div class="field">
                <p class="control">
                    <input class="input" type="text" name="title" value="<%= exercise.title %>" />
                </p>
            </div>
        </div>
    </div>

    <hr />

    <!-- Statement -->
    <div class="field">
        <div class="is-normal">
            <label class="label">Énoncé</label>
        </div>
        <div class="field-body mt-1">
            <div class="field">
                <p class="control">
                    <textarea class="textarea" id="txtStatement" name="statement" required><%= exercise.statement %></textarea>
                </p>
            </div>
        </div>
    </div>

    <!-- Statement Preview -->
    <label class="label">Prévisualisation de l'énoncé</label>
    <div class="box">
        <p style="white-space: pre;" id="pStatement">

        </p>
    </div>

    <hr />

    <!-- Response -->
    <div class="field">
        <div class="is-normal">
            <label class="label">Réponse</label>
        </div>
        <div class="field-body mt-1">
            <div class="field">
                <p class="control">
                    <textarea class="textarea" id="txtResponse" name="response" required><%= exercise.response %></textarea>
                </p>
            </div>
        </div>
    </div>

    <!-- Repsonse Preview -->
    <label class="label">Prévisualisation de la réponse</label>
    <div class="box">
        <p style="white-space: pre;" id="pResponse">

        </p>
    </div>

    <hr />

    <!-- Timer -->
    <div class="field">
        <div class="is-normal">
            <label class="label">Temps imparti (en secondes)</label>
        </div>
        <div class="field-body mt-1">
            <div class="field">
                <p class="control">
                    <input class="input" type="number" min="0" max="14400" name="time" value="<%= exercise.time %>" />
                </p>
            </div>
        </div>
    </div>

    <hr />

    <!-- Tags -->
    <div class="field">
        <div class="is-normal">
            <label class="label">Tags</label>
        </div>
        <div class="field-body mt-1">
            <div class="field">
                <p class="control">
                    <input class="input" type="text" name="tags" value="<% for (const tag of exercise.tags) { %><%= tag %>,<% } %>" required /> <!--TODO remove extra comma-->
                </p>
            </div>
        </div>
    </div>

    <input type="hidden" name="id" value="<%= exercise.id %>">

</form>

<form method="POST" action="/manage/delete" id="delete">
    <input type="hidden" name="id" value="<%= exercise.id %>">
</form>

<div class="modal" id="modalDelete">
    <div class="modal-background" data-target="modalDelete"></div>
    <div class="modal-content">
        <div class="box has-text-centered">
            <h1 class="title">Supprimer l'exercice</h1>
            <p class="is-family-primary">Êtes-vous sûr de vouloir supprimer l'exercice<br />"<%= exercise.title %>" ?</p>
            <button type="submit" form="delete" class="button is-danger mt-2">Supprimer</button>
        </div>
    </div>
    <button class="modal-close is-large" aria-label="close" data-target="modalDelete"></button>
</div>

<button type="submit" form="edit" class="button is-primary mt-2">Modifier</button>
<button type="button" class="button is-danger mt-2 ml-2" data-toggle="modal" data-target="modalDelete">Supprimer</button>


<script>
    addPreviewUpdate(document.querySelector("#txtStatement"), document.querySelector("#pStatement"));
    addPreviewUpdate(document.querySelector("#txtResponse"), document.querySelector("#pResponse"));
</script>

<%- include('../includes/footer') %>
